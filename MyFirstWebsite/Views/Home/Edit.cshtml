@model MyFirstWebsite.Models.Lists
@{
    ViewBag.Title = "Edit";
    var username = User.Identity.Name;
}

<h2>Edit Details</h2>
<a href="@Url.Action("Index", "Home")">Click here to go back</a>
@using (Html.BeginForm())
{
    <span>Enter new item: </span>
    <input type="text" name="new_item" /><br />
    <span>Public post?</span> <input type="checkbox" name="check_public" /> <br />
    <input type="submit" value="Add Item" />
}
<br />
<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th style="text-align: center;">Id</th>
            <th style="text-align: center;">Details</th>
            <th style="text-align: center;">Time - Date Posted</th>
            <th style="text-align: center;">Time - Date Edited</th>
            @*<th style="text-align: center;">Edit</th>
            <th style="text-align: center;">Delete</th>*@
            <th style="text-align: center;">Public Post</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td style="text-align: center;">@Model.Id</td>
                <td style="text-align: center;">@Model.Details</td>
                <td style="text-align: center;">@Model.Time_Posted</td>
                <td style="text-align: center;">@Model.Date_Posted</td>
                <td style="text-align: center;">@Model.Public</td>
            </tr>
    </tbody>
</table>


